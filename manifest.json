{
  "name": "Super Translator",
  "version": "0.2",
  "manifest_version": 2,
  
  "description": "Traduce singole parole presenti nelle pagine web. E' sufficiente eseguire doppio click sulla parola da tradurre.",
  "icons": { 
			"16": "dictionary16.png",
           	"48": "dictionary48.png",
          	"128": "dictionary.png"
  },
  
  "permissions": [
	  "http://glosbe.com/gapi/"
  ],
  
  "content_scripts":
  [
    {
      "matches": ["http://*/*", "https://*/*"], 
      "js":  ["jquery.js", "actions.js"],	
	  "css": ["style.css"]
    }
  ] 
}
